# -------------------------------------------------
# TEMPLATE TYPE SWITCH
# This variable controls the template used by
# the fiddle.sh when initializing a new nativescript
# fiddle. 2 options are supported:
#   "js"  JavaScript
#   "ng2" Angular2
# --------------------------------------------------
export __TEMPLATE_TYPE__="ng2";
